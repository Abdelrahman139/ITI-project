@using Train_Tickets.ViewModels
@using Train_Tickets.Controllers

@model RegisterVM


<section class="text-center text-lg-start">
    <style>
        .cascading-right {
            margin-right: -50px;
        }

        body {
            background-color: #eedfdc; 
            color: #333333; 
        }

        .bg-light-card {
            background-color: #fff;
            backdrop-filter: blur(20px);
            border: 1px solid #ccc; 
            color: #333;
        }

        .form-control {
            background-color: #f5f5f5; 
            color: #333; 
            border: 1px solid #ccc; 
        }

            .form-control::placeholder {
                color: #666; 
            }

            .form-control:focus {
                border-color: #ff6f61; 
                box-shadow: none;
            }

        .form-label {
            color: #666; 
        }

        .btn-primary {
            background-color: #ff6f61; 
            border-color: #ff6f61;
        }

            .btn-primary:hover {
                background-color: #ff4a3d; 
            }

        .btn-link {
            color: #ff6f61; 
        }

            .btn-link:hover {
                color: #ff4a3d; 
            }

        .form-check-input {
            background-color: #f5f5f5;
            border: 1px solid #ccc;
        }

        .form-check-label {
            color: #666;
        }

        .card-body {
            background-color: #fff; 
        }

        .text-center p {
            color: #666;
        }

        .btn-floating i {
            font-size: 1.25rem;
        }
    </style>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right bg-light-card">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Sign up now</h2>


                            <form asp-action="Register" method="post">
                                <div class="form-outline mb-4">
                                    <input asp-for="Name" class="form-control" placeholder="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                              
                                <div class="form-outline mb-4">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email address" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                            <div class="form-outline mb-4">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                               
                                <button type="submit" class="btn btn-primary btn-block mb-4">
                                    Sign up
                                </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="~/Trainn (1) (1).jpg" class="w-100 rounded-4 shadow-4" alt="" />
            </div>
        </div>
    </div>

</section>
<!-- Section: Design Block -->
