@using Train_Tickets.ViewModels
@using Train_Tickets.Controllers

@model LoginVM

<section class="text-center text-lg-start">
    <style>
        .cascading-right {
            margin-right: -50px;
        }

        body {
            background-color: #eedfdc;
            color: #333333;
        }

        .bg-light-card {
            background-color: #fff;
            backdrop-filter: blur(20px);
            border: 1px solid #ccc;
            color: #333;
        }

        .form-control {
            background-color: #f5f5f5;
            color: #333;
            border: 1px solid #ccc;
        }

            .form-control::placeholder {
                color: #666;
            }

            .form-control:focus {
                border-color: #ff6f61;
                box-shadow: none;
            }

        .form-label {
            color: #666;
        }

        .btn-primary {
            background-color: #ff6f61;
            border-color: #ff6f61;
        }

            .btn-primary:hover {
                background-color: #ff4a3d;
            }

        .btn-link {
            color: #ff6f61;
        }

            .btn-link:hover {
                color: #ff4a3d;
            }

        .form-check-input {
            background-color: #f5f5f5;
            border: 1px solid #ccc;
        }

        .form-check-label {
            color: #666;
        }

        .card-body {
            background-color: #fff;
        }

        .text-center p {
            color: #666;
        }

        .btn-floating i {
            font-size: 1.25rem;
        }
    </style>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right bg-light-card">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Login</h2>

                        <form asp-action="Login" method="post">
                            <div class="form-outline mb-4">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email address" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            @if (TempData["invalid"] != null)
                            {
                                <div class="alert alert-primary d-flex align-items-center" role="alert">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                    </svg>
                                    <div>
                                        @TempData["invalid"]
                                    </div>
                                </div>
                            }



                            <button type="submit" class="btn btn-primary btn-block mb-4">
                                Log in
                            </button>
                          
                           
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="~/Trainn (1) (1).jpg" class="w-100 rounded-4 shadow-4" alt="" />
            </div>
        </div>
    </div>

</section>

